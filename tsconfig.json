{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "lib": ["ES2020"],
      "moduleResolution": "nodenext",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "strict": true,
      "resolveJsonModule": true,
      "outDir": "dist",
      "declaration": true,
      "sourceMap": true
    },
    "include": ["src"]
  }